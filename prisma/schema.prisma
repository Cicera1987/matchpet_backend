generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url= env("DATABASE_URL")
}

//id_variable referencia a variavel e value o valor dessa variable

model Condition {
  id          Int         @id @default(autoincrement())
  operator    String
  value       String
  id_variable Int
  id_rule     Int          
  type        conditions_type
  Rules       Rules           @relation(fields: [id_rule], references: [id])
}

model Rules {
  id        Int         @id @default(autoincrement())
  name      String
  Condition Condition[]
}

model Values {
  id          Int      @id @default(autoincrement()) 
  name        String
  type        String
  id_variable Int
  Variable    Variable @relation(fields: [id_variable], references: [id])
}

model Variable {
  id     Int      @id @default(autoincrement())
  name   String
  Values Values[]
}

enum conditions_type {
  IF
  THEN
}
